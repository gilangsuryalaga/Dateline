<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
    <LinearLayout
        android:id="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_dialog"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/weddingpewds"
        />
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/text_view_judul"
        app:layout_constraintTop_toBottomOf="@id/image_view"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        >
        <TextView
            android:id="@+id/tv_dialog_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="alksjdlkasjasd"
            android:textColor="@color/Charcoal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@id/text_view_judul"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FFFFFF"
        >
        <TextView
            android:id="@+id/tv_dialog_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdasdasda"
            android:textSize="20dp"
            android:textColor="@color/Charcoal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
